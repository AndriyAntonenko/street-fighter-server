{
  "env": {
    "node": true,
    "mongo": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:import/errors"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "global-require": "error",
    "func-names": [
      "error",
      "never"
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_doc"
        ],
        "allowAfterThis": true
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "commonjs": true,
        "amd": true
      }
    ],
    "import/order": [
      2,
      {
        "groups": [
          "builtin",
          "external",
          "internal"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}